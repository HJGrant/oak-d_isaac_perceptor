{
  "name": "My OAK-D Dev",
  "image": "isaac_ros_dev-x86_64",
  "runArgs": [
    "--gpus", "all",
    "--network", "host",
    "--cpus", "32.0",
    "--memory", "53g",
    "--env", "DISPLAY=:1", 
    "--env", "ISAAC_ROS_WS=/workspaces/isaac_ros_dev",
    "--env", "XDG_RUNTIME_DIR=/tmp/runtime-root", 
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix",  // Mount X11 socket for display
    "-v", "/etc/machine-id:/etc/machine-id"  // Necessary for some GUI applications
  ],
  "postCreateCommand": "echo 'Dev container is ready!'",
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools"
  ]
}
